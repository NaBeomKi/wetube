extends base

block content 
    h4 Change Title of video
    form(method="POST")
        input(type="text", name="title", placeholder="Video Title", value=video.title, required, maxlength=80)
        input(type="text", name="description", placeholder="Video Description", value=video.description, required, minlength=20)
        input(type="text", name="hashtags", placeholder="Hashtags, separated by comma.", value=video.hashtags.map(tag=>tag.slice(1)).join(), required)
        input(type="submit", value="Save")