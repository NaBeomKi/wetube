header
    a(href="/").header__logo
        i.fab.fa-youtube
    nav 
        ul 
            li
                a(href="/search")
                    i.fas.fa-search
            if loggedIn
                li 
                    a(href="/videos/upload") Upload Video
                li 
                    a(href="/users/edit") Edit Profile
                li 
                    a(href="/users/logout") Log Out
                li
                    a(href=`/users/${loggedInUser._id}`)
                        if !loggedInUser.avatarUrl
                            div.header__avatar(style="background-image: url(https://images.unsplash.com/photo-1511367461989-f85a21fda167?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=889&q=80); background-size:cover; background-position:center")
                        else
                            img.header__avatar(src=loggedInUser.avatarUrl)
            else
                li 
                    a(href="/login") Login
                li
                    a(href="/join").header__btn  Join

