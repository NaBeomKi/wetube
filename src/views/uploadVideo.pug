extends base

block content 
    div 
        video#preview
        button#actionBtn Start Recording
    if errorMessage
        span=errorMessage
    form(method="POST", enctype="multipart/form-data")
        label(for="video") Video File
        input(type="file", name="video", id="video", accept="video/*", required)
        label(for="thumb") Thumbnail File
        input(type="file", name="thumb", id="thumb", accept="image/*", required)
        input(type="text", name="title", placeholder="Video Title", required, maxlength=80)
        input(type="text", name="description", placeholder="Video Description", required, minlength=20)
        input(type="text", name="hashtags", placeholder="Hashtags, separated by comma.", required)
        input(type="submit", value="Upload")

block scripts
    script(src="/assets/js/recorder.js") 