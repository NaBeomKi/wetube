extends base

block content 
    div#videoContainer(data-id=video._id)
        video(src=`/${video.fileUrl}`)
        div#videoControls.videoControls
            div.videoControls__play
                span#play.videoControls__playBtn
                    i.fas.fa-play
                div.videoControls__time
                    span#currentTime 00:00
                    span  / 
                    span#totalTime 00:00
            input(type="range",step="1", value="0", min="0")#timeline.videoControls__timeline
            div.videoControls__volume
                input(type="range",step="0.1", value=0.5, min="0", max="1")#volume
                span#mute
                    i.fas.fa-volume-up
            div 
                span#fullScreen
                    i.fas.fa-expand
    div.video__data
        div.video__info
            h1.video__title=video.title
            small.video__owner Uploaded by 
                a(href=`/users/${video.owner._id}`)=video.owner.name
            span  • 
            small.video__createdAt=new Date(video.createdAt).toLocaleDateString("ko-kr", {weekday: 'long', year: 'numeric', month: 'long', day: 'numeric'})
            span  • 
            small.video__views #{video.meta.views} 회
        if String(video.owner._id) === String(loggedInUser._id)
            div.video__editBtns 
                a(href=`${video.id}/edit`, title="Edit Video &rarr;")
                    i.fas.fa-pen
                a(href=`${video.id}/delete`, title="Delete Video &rarr;")
                    i.far.fa-trash-alt
    if loggedIn
        div.video__add-comments
            form.video__comment-form#commentForm
                textarea(cols="30", placeholder="Write a nice comment...")
                input(type="submit", value="Add comment.") 
    div.video__comments 
        ul#comments 
            each comment in video.comments.reverse()
                li.video__comment(data-id=comment.id)
                    i.fas.fa-comment 
                    span  #{comment.text}
                    if String(loggedInUser._id) === String(comment.owner)
                        i.far.fa-trash-alt.delBtn
            
block scripts 
    script(src="/assets/js/videoPlayer.js")
    if loggedIn
        script(src="/assets/js/commentSection.js")